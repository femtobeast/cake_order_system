<% include partials/header.ejs %>

<% include partials/menu.ejs %>
<section id="cart-view">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="cart-view-area">
                    <div class="cart-view-table">

                        <div class="table-responsive">
                            <input class="form-control" id="searchhere" type="text" placeholder="Search"
                                aria-label="Search" onkeyup="searchFun()">

                            <table class="table" id="tablehere">
                                <fieldset>
                                    <legend class="text-center header">Making cake completed</legend>
                                    <thead>
                                        <tr>
                                            <th scope="col">Order ID</th>
                                            <th scope="col">Cake Name</th>
                                            <th scope="col">Flavour Type</th>
                                            <th scope="col">Customer Name</th>
                                            <th scope="col">Customer Address</th>
                                            <th scope="col">Customer Phone</th>
                                            <th scope="col">delivery_option</th>
                                            <th scope="col">order status</th>

                                        </tr>
                                    </thead>
                                    <tbody id="notapprovalList">

                                        <% data.forEach(function(data){%>
                                        <tr id="">
                                            <td scope="row"><%= data.order_id %> </td>
                                            <td><%= data.cake_name %> </td>

                                            <td><%= data.flavour_type %></td>
                                            <td><%= data.order_by %> </td>
                                            <td> <%= data.delivery_location %></td>
                                            <td>
                                                <%= data.order_phone %>
                                            </td>

                                            <td>
                                                <%= data.delivery_option %>
                                            </td>
                                            <td>
                                                <button name="notapproval" id="notapproval" class="btn btn-primary"
                                                    data-toggle="modal" data-target="#exampleModalLong"
                                                    orderid="<%= data.order_id %>"> complete</button>
                                                <div class="modal fade" id="exampleModalLong" tabindex="-1"
                                                    role="dialog" aria-labelledby="exampleModalLongTitle"
                                                    aria-hidden="true">
                                                    <div class="modal-dialog" role="document">
                                                        <div id="popup" class="modal-content">
                                                            <div class="modal-header">
                                                                <form class="form-horizontal" method="post"
                                                                    id="updateorderstatus">
                                                                    <fieldset>
                                                                        <legend class="text-center header">Update order
                                                                            status
                                                                            details
                                                                        </legend>

                                                                        <strong id="message"
                                                                            style="color: green"></strong>

                                                                        <div class="form-group">
                                                                            <span
                                                                                class="col-md-1 col-md-offset-2 text-center"><i
                                                                                    class="fa fa-birthday-cake"></i></span>
                                                                            <div class="col-md-8">
                                                                                <label for="flavourtype">Order
                                                                                    status</label>
                                                                                <select class="form-control"
                                                                                    id="orderstatus" name="orderstatus"
                                                                                    orderid="<%= data.order_id %>">

                                                                                    <option>notapproval
                                                                                    </option>
                                                                                    <option selected>complete</option>
                                                                                    <option>progress</option>
                                                                                    <option>delivered</option>
                                                                                </select>
                                                                            </div>
                                                                        </div>
                                                                        <button>update</button>




                                                                    </fieldset>
                                                                </form>
                                                                <button type="button" class="close" data-dismiss="modal"
                                                                    aria-label="Close">
                                                                    <span aria-hidden="true">&times;</span>
                                                                </button>
                                                            </div>
                                                            <div class="modal-body">

                                                            </div>
                                                        </div>


                                                    </div>

                                                </div>

                                            </td>

                                            <%}) %>
                                        </tr>
                                    </tbody>
                                </fieldset>
                            </table>
                        </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<% include partials/footer.ejs %>