<section id="aa-myaccount">

    <div class="container">


        <div class="row">
            <div class="col-md-12">
                <div class="well well-sm">
                    <form class="form-horizontal" id="addcakeform" method="post" enctype="multipart/form-data">
                        <% if(typeof message !== 'undefined') { %>
                        <p><%= message %></p>
                        <% } %>
                        <fieldset>
                            <legend class="text-center header">Add cake details</legend>

                            <div class="form-group">
                                <span class="col-md-1 col-md-offset-2 text-center"><i
                                        class="fa fa-birthday-cake"></i></span>
                                <div class="col-md-8">
                                    <label for="cakename">Cake Name</label>

                                    <input id="cakename" name="cakename" type="text" placeholder="cake Name"
                                        class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <span class="col-md-1 col-md-offset-2 text-center"><i
                                        class="fa fa-birthday-cake"></i></span>

                                <div class="col-md-8">
                                    <label for="flavourname">Flavour Name</label>
                                    <select class="form-control" id="flavourname" name="flavourname">
                                        <% fdata.forEach(function(data){%>
                                        <option><%=
                                        data.flavour_name %> <%})%>
                                        </option>
                                    </select>
                                </div>
                            </div>




                            <div class="form-group">
                                <span class="col-md-1 col-md-offset-2 text-center"><i
                                        class="fa fa-birthday-cake"></i></span>
                                <div class="col-md-8">
                                    <label for="flavourtype">Flavour Type</label>
                                    <select class="form-control" id="flavourtype" name="flavourtype">

                                        <option>s</option>
                                    </select>
                                </div>
                            </div>

                            <div class="form-group">
                                <span class="col-md-1 col-md-offset-2 text-center"><i
                                        class="fa fa-birthday-cake"></i></span>
                                <div class="col-md-8">
                                    <label for="price">Price of cake</label>

                                    <input id="price" name="price" type="text" placeholder="price of cake"
                                        class="form-control">
                                </div>
                            </div>

                            <div class="form-group">
                                <span class="col-md-1 col-md-offset-2 text-center"><i
                                        class="fa fa-birthday-cake"></i></span>
                                <div class="col-md-8">
                                    <label for="serve">Serve</label>

                                    <input id="serve" name="serve" type="text" placeholder="serve" class="form-control">
                                </div>
                            </div>


                            <div class="form-group">
                                <span class="col-md-1 col-md-offset-2 text-center"><i
                                        class="fa fa-birthday-cake"></i></span>
                                <div class="col-md-8">
                                    <label for="version">Version</label>
                                    <select class="form-control" id="version" name="version">

                                        <option>Egg</option>
                                        <option>Eggless</option>
                                    </select>
                                </div>
                            </div>



                            <div class="form-group">
                                <span class="col-md-1 col-md-offset-2 text-center"><i
                                        class="fa fa-birthday-cake"></i></span>
                                <div class="col-md-8">
                                    <label for="size">Number of pound</label>

                                    <input id="size" name="size" type="text" placeholder="Cake Size"
                                        class="form-control">
                                </div>
                            </div>


                            <div class="form-group">
                                <span class="col-md-1 col-md-offset-2 text-center"><i
                                        class="fa fa-birthday-cake"></i></span>
                                <div class="col-md-8">
                                    <label for="cakeimage">Update Image of Cake</label>
                                    <p style="color: red"><%= typeof msg != 'undefined' ? msg:'' %></p>

                                    <input id="cakeimage" name="cakeimage" type="file" placeholder="cake image"
                                        class="form-control">


                                </div>
                            </div>



                            <div class="form-group">
                                <span class="col-md-1 col-md-offset-2 text-center"><i
                                        class="fa fa-pencil-square-o bigicon"></i></span>
                                <div class="col-md-8">
                                    <textarea class="form-control" id="desc" name="desc"
                                        placeholder="Description of cake" rows="7"></textarea>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-12 text-center">
                                    <button type="submit" class="btn btn-primary btn-lg">Submit</button>
                                </div>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>


