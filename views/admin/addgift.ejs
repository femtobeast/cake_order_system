<% include partials/header.ejs %>
<% include partials/menu.ejs %>

<section id="aa-myaccount">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <!-- <div class="well well-sm"> -->
                <form class="form-horizontal" method="post" id="giftform">
                    <fieldset>
                        <legend class="text-center header">Add gift details</legend>
                        <% if(typeof message !== 'undefined') { %>
                        <p><%= message %></p>
                        <% } %>
                        <alert id="message"></alert>

                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i
                                    class="fa fa-birthday-cake"></i></span>
                            <div class="col-md-8">
                                <label for="fn">Gift Name</label>

                                <input id="giftname" name="giftname" type="text" placeholder="Gift Name"
                                    class="form-control">
                            </div>
                        </div>

                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i
                                    class="fa fa-birthday-cake"></i></span>
                            <div class="col-md-8">
                                <label for="fn">Gift Price</label>

                                <input id="giftprice" name="giftprice" type="text" placeholder="Gift Price"
                                    class="form-control">
                            </div>
                        </div>

                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i
                                    class="fa fa-birthday-cake"></i></span>
                            <div class="col-md-8">
                                <label for="fn">Gift Image</label>

                                <input id="giftimage" name="giftimage" type="file" placeholder="Gift Price"
                                    class="form-control">
                            </div>
                        </div>


                        <div class="form-group">
                            <div class="col-md-12 text-center">
                                <button type="submit" class="btn btn-primary btn-lg">Submit</button>
                            </div>
                        </div>
                    </fieldset>
                </form>
                <!-- </div> -->
            </div>
        </div>
    </div>
    </div>
</section>



<% include partials/footer.ejs %>