<% include partials/header.ejs %>
<% include partials/menu.ejs %>
<section id="aa-myaccount">
    <div class="container">

        <div class="row">
            <div class="col-md-12">
                <div class="well well-sm">
                    <!-- <form id="updateLoginUser"> -->
                    <% if(locals.customerD){%>
                    <%  customerD.forEach(function(data){ %>
                    <fieldset>
                        <legend class="text-center header">Update Profile</legend>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="fname">First Name</label>
                                <input type="text" class="form-control" id="fname" placeholder="First Name"
                                    value="<%= session.fname%>">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="lname">Last Name</label>
                                <input type="text" class="form-control" id="lname" placeholder="Last Name"
                                    value="<%= session.lname%>">
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="email">Email Address</label>
                                <input type="text" class="form-control" id="email" placeholder="Email address"
                                    value="<%= session.customerEmail%>">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="Address">Address</label>
                                <input type="text" class="form-control" id="address"
                                 placeholder="Address" value="<%= data.cust_address%>">
                            </div>
                        </div>


                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="PhoneNumber">Phone Number</label>
                                <input type="text" class="form-control" id="PhoneNumber" 
                                placeholder="9898989898" value="<%= data.cust_phone%>">
                            </div>


                            <div class="form-group col-md-6">
                                <label for="address">Password</label>
                                <input type="Password" class="form-control"
                                 id="password" placeholder="" required>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="PhoneNumber">Birthday</label> <i
                                    class="zmdi zmdi-calendar-note input-icon js-btn-calendar"></i>
                                <input class="input--style-2 js-datepicker form-control" type="text"
                                    placeholder="Birthdate" name="birthday" value="<%= data.cust_dob%>" id="dob">


                            </div>

                            <div class="form-group col-md-6">
                                <label for="PhoneNumber">Gender</label>
                                <div class="rs-select2 js-select-simple select--no-search">
                                    <select name="gender" id="gender">
                                        <option disabled="disabled" selected="selected">Gender</option>
                                        <option id="gmale">Male</option>
                                        <option id="gfemale">Female</option>
                                    </select>
                                    <div class="select-dropdown"></div>
                                </div>
                            </div>
                        </div>
                    </fieldset>

                    <% })%>
                    <% }%>
                    <button type="submit" id="updateBtn" class="btn btn-accent">Update Account</button>
                    <!-- </form> -->



                </div>
            </div>
        </div>
    </div>
</section>
<% include partials/footer.ejs %>