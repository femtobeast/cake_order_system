<% include partials/header.ejs %>
<% include partials/menu.ejs %>


<div class="container">
    <div class="col-md-12">
        <div class="plandiv">
            <form>
                <h1>Plan your cake | Fill all the detail provided</h1>
                <!-- One "tab" for each step in the form: -->
                <div class="tab">
                    <label>Number of people to serve.</label>
                    <p><input placeholder="serve number" oninput="this.className = ''" name="serven"></p>
                </div>
                <div class="tab">
                    <label>Number of pound.</label>
                    <p><input placeholder="example 1" oninput="this.className = ''" name="pound"></p>
                </div>
                <div class="tab">
                    <label>Number of tier.</label>
                    <p><input placeholder="example 1" oninput="this.className = ''" name="pound"></p>
                </div>
                <div class="tab">
                        <div class="budget-wrap">
                            <div class="budget">
                                <div class="header">
                                    <div class="title clearfix">Set your budget! <span class="pull-right"></span>
                                    </div>
                                </div>
                                <div class="content">
                                    <input id="rangevalue" type="range" min="1" max="5000" value="500" data-rangeslider>
                                </div>
    
                            </div>
                        </div>
                    </div>
                <div class="tab">
                    <label>Eggless?</label>
                    <div class="form-group">
                        <select class="form-control" id="sel1" oninput="this.className = ''">
                            <option>Yes</option>
                            <option>No</option>
                        </select>
                    </div>
                </div>
                <div class="tab">
                    <label>Any sepecific shape of cake?</label>
                       <div class="shapediv">
                            <div class="col-md-5">
                                    <label>
                                        <input oninput="this.className = ''" type="radio" name="test" value="small" checked>
                                        <img height="auto" width="50" src="/dashboard/img/cakeimg/square.png">
                                    </label>
        
                                    <label>
                                        <input oninput="this.className = ''" type="radio" name="test" value="big">
                                        <img height="auto" width="50" src="/dashboard/img/cakeimg/heart.png">
                                    </label>
                                    <label>
                                        <input oninput="this.className = ''" type="radio" name="test" value="big">
                                        <img height="auto" width="50" src="/dashboard/img/cakeimg/round.png">
                                    </label>
                                </div>
                       </div>
                </div>
              
                <div class="tab">Login Info:
                    <label>Select any occasions | to order your special cake.</label>
                </div>
                <div style="overflow:auto;">
                    <div style="float:right;">
                        <button type="button" class="pbtn" id="prevBtn" onclick="nextPrev(-1)">Previous</button>
                        <button type="button" class="pbtn" id="nextBtn" onclick="nextPrev(1)">Next</button>
                    </div>
                </div>
                <!-- Circles which indicates the steps of the form: -->
                <div style="text-align:center;margin-top:40px;">
                    <span class="step"></span>
                    <span class="step"></span>
                    <span class="step"></span>
                    <span class="step"></span>
                    <span class="step"></span>
                    <span class="step"></span>
                </div>
            </form>
        </div>
    </div>
</div>
<% include partials/footer.ejs %>
<script src="/js/library/steppers.js"></script>